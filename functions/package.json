{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Upwork Job Assistant",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@upwork/node-upwork-oauth2": "^2.3.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "graphql-request": "^6.1.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
